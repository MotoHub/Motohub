<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LayoutMatchWrap">

    <android.support.v7.widget.CardView
        android:id="@+id/row_adapter_picker_video_container"
        style="@style/LayoutMatchWrap"
        android:layout_width="0dp"
        android:layout_margin="@dimen/size5"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="@dimen/size5">

        <RelativeLayout style="@style/LayoutMatchWrap">

            <ImageView
                android:id="@+id/row_picker_video_pager_thumbnail_image_view"
                style="@style/LayoutMatchWrap"
                android:layout_height="@dimen/size150"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/video_place_holder" />

            <ImageView
                android:id="@+id/playBtn"
                android:layout_width="@dimen/size50"
                android:layout_height="@dimen/size50"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/play_icon" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
