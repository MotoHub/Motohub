<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutMatch"
    android:background="@color/transparent50">

    <RelativeLayout style="@style/LayoutMatch">

        <LinearLayout
            style="@style/LayoutMatchWrap"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnGoLive"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_margin="@dimen/size10"
                android:background="@drawable/black_orange_btn_bg"
                android:text="@string/start_live"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text16"
                android:textStyle="italic|bold" />

            <Button
                android:id="@+id/btnGoWatch"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_margin="@dimen/size10"
                android:background="@drawable/black_orange_btn_bg"
                android:text="@string/view_live"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text16"
                android:textStyle="italic|bold" />

        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
