<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_padding">

    <View
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/placeholder_image"
        android:layout_height="@dimen/placeholder_image"
        android:layout_marginEnd="@dimen/activity_padding"
        android:background="@color/placeholder_bg" />

    <View
        android:id="@+id/thumbnail2"
        android:layout_width="@dimen/placeholder_image"
        android:layout_height="@dimen/placeholder_image"
        android:layout_marginEnd="@dimen/activity_padding"
        android:layout_toEndOf="@id/thumbnail"
        android:background="@color/placeholder_bg" />

    <View
        android:id="@+id/thumbnail3"
        android:layout_width="@dimen/placeholder_image"
        android:layout_height="@dimen/placeholder_image"
        android:layout_marginEnd="@dimen/activity_padding"
        android:layout_toEndOf="@id/thumbnail2"
        android:background="@color/placeholder_bg" />

    <View
        android:id="@+id/thumbnail4"
        android:layout_width="@dimen/placeholder_image"
        android:layout_height="@dimen/placeholder_image"
        android:layout_marginEnd="@dimen/activity_padding"
        android:layout_toEndOf="@+id/thumbnail3"
        android:background="@color/placeholder_bg" />

    <View
        android:id="@+id/thumbnail5"
        android:layout_width="@dimen/placeholder_image"
        android:layout_height="@dimen/placeholder_image"
        android:layout_marginEnd="@dimen/activity_padding"
        android:layout_toEndOf="@+id/thumbnail4"
        android:background="@color/placeholder_bg" />

    <View
        android:id="@+id/u1"
        android:layout_width="@dimen/placeholder_image"
        android:layout_height="@dimen/placeholder_text_height"
        android:layout_below="@id/thumbnail2"
        android:layout_marginEnd="@dimen/activity_padding"
        android:layout_marginTop="@dimen/size10"
        android:background="@color/placeholder_bg" />

    <View
        android:id="@+id/u2"
        android:layout_width="@dimen/placeholder_image"
        android:layout_height="@dimen/placeholder_text_height"
        android:layout_below="@id/thumbnail2"
        android:layout_marginEnd="@dimen/activity_padding"
        android:layout_marginTop="@dimen/size10"
        android:layout_toEndOf="@+id/u1"
        android:background="@color/placeholder_bg" />

    <View
        android:id="@+id/u3"
        android:layout_width="@dimen/placeholder_image"
        android:layout_height="@dimen/placeholder_text_height"
        android:layout_below="@id/thumbnail2"
        android:layout_marginEnd="@dimen/activity_padding"
        android:layout_marginTop="@dimen/size10"
        android:layout_toEndOf="@+id/u2"
        android:background="@color/placeholder_bg" />

    <View
        android:id="@+id/u4"
        android:layout_width="@dimen/placeholder_image"
        android:layout_height="@dimen/placeholder_text_height"
        android:layout_below="@id/thumbnail2"
        android:layout_marginEnd="@dimen/activity_padding"
        android:layout_marginTop="@dimen/size10"
        android:layout_toEndOf="@+id/u3"
        android:background="@color/placeholder_bg" />

    <View
        android:id="@+id/u5"
        android:layout_width="@dimen/placeholder_image"
        android:layout_height="@dimen/placeholder_text_height"
        android:layout_below="@id/thumbnail2"
        android:layout_marginEnd="@dimen/activity_padding"
        android:layout_marginTop="@dimen/size10"
        android:layout_toEndOf="@+id/u4"
        android:background="@color/placeholder_bg"/>

</RelativeLayout>