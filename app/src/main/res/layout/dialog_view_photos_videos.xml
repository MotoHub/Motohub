<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingTop="@dimen/size10"
    android:paddingBottom="@dimen/size10"
    tools:context="online.motohub.fragment.dialog.AppDialogFragment">

    <RelativeLayout
        android:id="@+id/editLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/edit_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/size10"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/photo_icon" />

        <TextView
            android:id="@+id/edit_tv"
            style="@style/LayoutWrap"
            android:layout_alignTop="@+id/edit_icon"
            android:layout_alignBottom="@+id/edit_icon"
            android:layout_toEndOf="@+id/edit_icon"
            android:gravity="center_vertical"
            android:text="@string/edit"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text14" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/deleteLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editLayout"
        android:background="@drawable/ripple_effect"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/size10"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/video_black_icon" />

        <TextView
            android:id="@+id/delete_tv"
            style="@style/LayoutWrap"
            android:layout_alignTop="@+id/delete_icon"
            android:layout_alignBottom="@+id/delete_icon"
            android:layout_toEndOf="@+id/delete_icon"
            android:gravity="center_vertical"
            android:text="@string/delete"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text14" />

    </RelativeLayout>

</RelativeLayout>