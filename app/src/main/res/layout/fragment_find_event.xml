<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLay"
    android:background="@color/colorLightGrey"
    style="@style/LayoutMatch">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLay"
        style="@style/LayoutMatchWrap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="@dimen/size5"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/findEventsView"
                style="@style/customCard"
                app:cardBackgroundColor="@color/card_bg"
                app:cardCornerRadius="@dimen/size5"
                app:layout_constraintBottom_toTopOf="@+id/horGuideline1"
                app:layout_constraintEnd_toStartOf="@+id/verticalGuideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    style="@style/LayoutMatch"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/size60"
                        android:layout_height="@dimen/size60"
                        android:contentDescription="@string/find_event"
                        android:src="@drawable/find_an_event_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/find_event"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text20"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/viewEventResultsView"
                style="@style/customCard"
                app:cardBackgroundColor="@color/card_bg"
                app:cardCornerRadius="@dimen/size5"
                app:layout_constraintBottom_toTopOf="@+id/horGuideline1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/verticalGuideline"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    style="@style/LayoutMatch"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/size60"
                        android:layout_height="@dimen/size60"
                        android:contentDescription="@string/event_results"
                        android:src="@drawable/event_result_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/event_results"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text20"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listView"
                style="@style/LayoutMatchWrap"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/horGuideline1"
                app:layout_constraintVertical_bias="0.0" />

            <android.support.constraint.Guideline
                android:id="@+id/verticalGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <android.support.constraint.Guideline
                android:id="@+id/horGuideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.33" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</android.support.constraint.ConstraintLayout>