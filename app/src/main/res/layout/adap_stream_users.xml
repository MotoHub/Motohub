<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item"
    style="@style/LayoutMatchWrap">

    <android.support.v7.widget.CardView
        style="@style/LayoutMatchWrap"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_margin="@dimen/size5">

        <RelativeLayout style="@style/LayoutMatchWrap"
            android:padding="@dimen/size5">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_img"
                android:layout_width="@dimen/size50"
                android:layout_height="@dimen/size50"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/size5"
                android:scaleType="centerCrop"
                android:src="@drawable/default_profile_icon" />

            <TextView
                android:id="@+id/user_name_txt"
                style="@style/LayoutMatchWrap"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/size5"
                android:layout_marginStart="@dimen/size5"
                android:layout_toEndOf="@+id/user_img"
                android:layout_toStartOf="@+id/send_request_btn"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text16"
                android:textStyle="bold" />


            <Button
                android:id="@+id/send_request_btn"
                android:layout_width="@dimen/size100"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/size2"
                android:background="@drawable/black_orange_btn_bg"
                android:text="@string/send_stream_request"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text12"
                android:visibility="visible" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>