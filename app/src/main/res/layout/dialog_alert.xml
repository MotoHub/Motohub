<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutWrap"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/size20"
    android:layout_marginLeft="@dimen/size20"
    android:layout_marginEnd="@dimen/size20"
    android:layout_marginRight="@dimen/size20"
    android:background="@drawable/alert_bg"
    tools:context="online.motohub.fragment.dialog.AppDialogFragment">

    <TextView
        android:id="@+id/dialog_tv"
        style="@style/LayoutMatchWrap"
        android:layout_marginTop="@dimen/size10"
        android:gravity="center"
        android:padding="@dimen/size10"
        android:text="@string/ensure_exit"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text16" />

    <RelativeLayout
        style="@style/LayoutMatchWrap"
        android:layout_below="@+id/dialog_tv"
        android:paddingTop="@dimen/size10"
        android:paddingBottom="@dimen/size20">

        <TextView
            android:id="@+id/dialog_positive_btn"
            style="@style/LayoutWrap"
            android:layout_alignEnd="@+id/btn_space"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/size5"
            android:background="@drawable/black_orange_btn_bg"
            android:clickable="true"
            android:paddingStart="@dimen/size20"
            android:paddingLeft="@dimen/size20"
            android:paddingTop="@dimen/size5"
            android:paddingEnd="@dimen/size20"
            android:paddingRight="@dimen/size20"
            android:paddingBottom="@dimen/size5"
            android:text="@string/yes"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text14" />

        <Space
            android:id="@+id/btn_space"
            style="@style/LayoutWrap"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/dialog_negative_btn"
            style="@style/LayoutWrap"
            android:layout_alignStart="@+id/btn_space"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/size5"
            android:background="@drawable/black_orange_btn_bg"
            android:clickable="true"
            android:paddingStart="@dimen/size20"
            android:paddingLeft="@dimen/size20"
            android:paddingTop="@dimen/size5"
            android:paddingEnd="@dimen/size20"
            android:paddingRight="@dimen/size20"
            android:paddingBottom="@dimen/size5"
            android:text="@string/no"
            android:textAlignment="center"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text14" />

    </RelativeLayout>

</RelativeLayout>